---
import { SOCIALS } from "@/consts";
import IconGitHub from "@/assets/icons/IconGitHub.svg";
import IconLinkedin from "@/assets/icons/IconLinkedin.svg";
import IconRss from "@/assets/icons/IconRss.svg";

export interface Props {
  centered?: boolean;
}

const { centered = false } = Astro.props;
type SocialKey = 'github' | 'linkedin' | 'rss';
const icons = {
  github: IconGitHub,
  linkedin: IconLinkedin,
  rss: IconRss,
};
---

<div class:list={["flex-wrap justify-center gap-1", { flex: centered }]}>
  {
    SOCIALS.map(social => {
      const Icon = icons[social.NAME.toLowerCase() as SocialKey];
      return (
        <a
          id={social.NAME}
          href={social.HREF}
          class="group inline-block hover:text-accent p-1 hover:rotate-15 sm:p-1"
          title={social.LINK_TITLE}
          aria-label={social.LINK_TITLE}
        >
          <Icon class="inline-block size-6 scale-125 fill-transparent stroke-current stroke-1 opacity-90 group-hover:fill-transparent sm:scale-110" />
          <span class="sr-only">{social.LINK_TITLE}</span>
        </a>
      );
    })
  }
</div>
